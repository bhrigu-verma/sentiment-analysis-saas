# Application
PORT=3000
NODE_ENV=development
API_PREFIX=api/v1
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/financial_platform
MONGODB_URI=mongodb://localhost:27017/financial_platform
REDIS_URL=redis://localhost:6379
CLICKHOUSE_URL=http://localhost:8123

# Security
JWT_SECRET=your-secret-key
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d
BCRYPT_SALT_ROUNDS=10
API_KEY_HEADER=x-api-key

# External APIs
# Market Data APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key
IEX_CLOUD_API_KEY=your-iex-cloud-key

# News APIs
NEWS_API_KEY=your-newsapi-key
MARKETAUX_API_KEY=your-marketaux-key

# Service URLs
ML_SERVICE_URL=http://localhost:5000
WEBSOCKET_SERVER=ws://localhost:8080

# Logging
LOG_LEVEL=debug
SENTRY_DSN=your-sentry-dsn # Optional for error tracking

# Cache
CACHE_TTL=3600
REDIS_CACHE_PREFIX=fip:cache:

# Queue
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=financial-platform
KAFKA_GROUP_ID=financial-platform-group

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Feature Flags
ENABLE_REALTIME_UPDATES=true
ENABLE_ML_PREDICTIONS=true
ENABLE_NEWS_ANALYSIS=true

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password